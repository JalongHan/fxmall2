<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    tools:showIn="@layout/cart_fragment">

    <ImageView
        android:id="@+id/cartFragment_iv_cart"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:src="@mipmap/cart" />

    <TextView
        android:id="@+id/cartFragment_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/cartFragment_iv_cart"
        android:text="购物车还空空如也, 您可以"
        android:textColor="@color/main_bt_text"
        android:textSize="12sp" />


    <Button
        android:id="@+id/cartFragment_bt_seeCollect"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:background="@null"
        android:text="看看收藏"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/cartFragment_bt_secondsKill"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@id/cartFragment_bt_seeCollect"
        android:background="@null"
        android:text="疯狂秒杀"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>